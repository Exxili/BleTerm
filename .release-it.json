{
  "$schema": "https://raw.githubusercontent.com/release-it/release-it/main/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": true,
    "commit": true,
    "commitMessage": "chore(release): ${version}",
    "tag": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "tokenRef": "GITHUB_TOKEN",
    "assets": [
      "release/${version}/*.exe",
      "release/${version}/*.msi",
      "release/${version}/*.dmg",
      "release/${version}/*.AppImage",
      "release/${version}/*.zip"
    ]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:github:release": "npm run build"
  }
}
